
@{
    ViewBag.Title = "AdminPostanswer";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row" style="min-height:50px; padding-top:8px;background-color:firebrick;font-size:20px;color:white;margin:15px 0px;">
        <div class="col-sm-12 text-center">
            Post Your Answer
        </div>
    </div>

    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10" style="background-color:whitesmoke;margin-bottom:10px;">
            @using (Html.BeginForm("AdminPostAnswer", "AdminZone", FormMethod.Post))
            {
                <div class="row" style="background-color:burlywood;margin:20px 0px;">
                    <div class="col-sm-10">
                        @Html.TextArea("answer", null, new { @class = "form-control", placeholder = "Type your Question...", rows = "2", style = "resize:none;font-size:20px;margin-top:10px" })
                    </div>
                    <div class="col-sm-2">
                        <input type="submit" value="Post reply" class="btn btn-success btn-block" style="height:70px;margin:10px 0px;font-size:20px;" />
                    </div>
                </div>
            }

            <div class="row" style="padding:10px 0px;font-size:18px;">
                <div class="col-sm-1"> </div>
                <div class="col-sm-10 bg-info text-white text-center ">@ViewBag.msg</div>
                <div class="col-sm-1"></div>

            </div>
            <div class="row" style="background-color:white;font-size:18px;margin:20px;">
                <div class="col-sm-3"> </div>
                <div class="col-sm-6 text-center">
                    @Html.ActionLink("Back to Discussion Board", "DiscussionForum")
                </div>
                <div class="col-sm-3"> </div>
            </div>

        </div>

    </div>
    <div class="col-sm-1"></div>
</div>
