
@{
    ViewBag.Title = "DiscussionForum";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using EstudyCorner.Models
@model  List<Dquestion>

<div class="container-fluid">
    <div class="row" style="min-height:50px; padding-top:8px;background-color:firebrick;font-size:20px;color:white;margin:15px 0px;">
        <div class="col-sm-12 text-center">
            Discussion Forum
        </div>
    </div>

    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10" style="background-color:whitesmoke;margin-bottom:10px;">
            @using (Html.BeginForm("DiscussionForum", "AdminZone", FormMethod.Post))
            {
                <div class="row" style="background-color:burlywood;margin:20px 0px;">
                    <div class="col-sm-10">
                        @Html.TextArea("Question", null, new { @class = "form-control", placeholder = "Type your Question...", rows = "2", style = "resize:none;font-size:20px;margin-top:10px" })
                    </div>
                    <div class="col-sm-2">
                        <input type="submit" value="Post Now" class="btn btn-success btn-block" style="height:70px;margin:10px 0px;font-size:20px;" />
                    </div>
                </div>
            }

            <div class="row" style="min-height:400px;padding:20px 0px">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-1">
                        </div>
                        <div class="col-sm-10 bg-info text-white text-center h3">@ViewBag.msg</div>
                        <div class="col-sm-1">
                        </div>
                    </div>
                    <table border="1" style="width:100%" class="table table-hover table-responsive-sm table-bordered text-center">
                        <tr style="background-color:salmon;color:white;min-height:20px;font-size:20px;">
                            <th>PostNo.</th>
                            <th>Post</th>
                            <th>Posted By</th>
                            <th>Added_On</th>
                            <th>Show Answer</th>
                            <th>Post Answer</th>
                        </tr>
                        @{
                            foreach (Dquestion dq in Model)
                            {
                                <tr style="font-size:20px;">
                                    <td>@dq.Qid</td>
                                    <td>@dq.question</td>
                                    <td>@dq.registration.name</td>
                                    <td>@dq.askDate</td>
                                    <td><a href="/AdminZone/AdminShowAnswer?qid=@dq.Qid">Show</a></td>
                                    <td><a href="/AdminZone/AdminPostanswer?qid=@dq.Qid">Reply</a></td>
                                </tr>
                            }
                        }

                    </table>
                </div>

            </div>


        </div>
        <div class="col-sm-1"></div>
    </div>

</div>

