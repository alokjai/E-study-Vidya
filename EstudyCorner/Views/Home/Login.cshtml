
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/General_layout.cshtml";
}

<script>
     $(document).ready(function(){
	    $("#imgeye").click(function(){
		  var tt=$("#imgeye").attr("title");
		  if(tt=="Show Password")
		  {
		     $("#pass").attr("type","text");
              $("#imgeye").attr("src","/Content/icon/close eye.png");
			 $("#imgeye").attr("title","Hide Password");
		  }
		  else
		  {
		    $("#pass").attr("type","password");
              $("#imgeye").attr("src","/Content/icon/open eye.png");
			 $("#imgeye").attr("title","Show Password");
		  }
		});
	 });
</script>



<div class="container-fluid" style="padding:40px 0px 40px 0px;background-image:url('/Content/Images/background.jpg');">
    <div class="row" style="margin:130px 0px;">
        <div class="col-sm-3"></div>
        <div class="col-sm-6" style="border:outset;border-bottom-right-radius:9px;border-top-right-radius:9px;background-color:rgba(245, 245, 245, 0.82)">
            <div class="row ">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <p style="font-size:25px;text-align:center;font-weight:800;padding-top:20px;color:black;">Learner login</p>
                </div>
                <div class="col-sm-2"></div>
            </div>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <div class="row " style="margin-top:12px;">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        @Html.TextBox("userID", null, new { required = "required", placeholder = "UserId or Email", style = "padding : 20px; margin: 10px;border: 3px outset;width:90%;border-radius:8px;font-size:18px;" })
                    </div>
                    <div class="col-sm-2"></div>
                </div>

                <div class="row ">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-9" style="display:flex">
                        <!--  <input type="password" id="input" placeholder="Password" name="pass" style="padding : 20px; margin: 10px;border: 3px outset;width:90%;border-radius:8px;font-size:18px;" />-->

                        @Html.TextBox("pass", null, new { required = "required", type = "Password", placeholder = "Password", style = "padding : 20px; margin: 10px;border: 3px outset;width:80%;border-radius:8px;font-size:18px;" })
                        <img src="~/Content/icon/open eye.png" height="40px" width="40px" style="margin-top:25px;" id="imgeye" />
                    </div>
                    <div class="col-sm-1"></div>
                </div>


                <div class="row " style="margin:10px;">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">
                        <input type="submit" ,value="login" class="btn-success" style="min-height:40px;min-width:100px;border-radius:6px;font-size:18px;font-weight:600;">
                    </div>
                    <div class="col-sm-8">
                        @Html.ActionLink("Forgot password", "ForgetPass", null, new { style = "color:green;font-size:18px;font-weight:800;" })
                    </div>

                </div>

                <div class="row " style="margin:10px;">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8" style="margin-left:12px">
                        <span style="font-size:17px;color:black;font-weight:800;"> If you don't have account.Please  @Html.ActionLink("Register", "Register", null, new { style = "color:blue;font-size:18px;font-weight:800;" })</span>
                    </div>
                    <div class="col-sm-2"> </div>
                </div>

                <div class="row " style="margin:10px;">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8" style="margin-left:10px">
                        <span style="font-size:17px;color:white;font-weight:800;background-color:crimson;">@ViewBag.msg</span>
                    </div>
                    <div class="col-sm-2"> </div>
                </div>

            }
        </div>
        <div class="col-sm-3"></div>

    </div>


</div>