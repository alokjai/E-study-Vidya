
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome E-study Vidya's Study zone</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />


    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</head>

<body>
    <div class="container-fluid" style="padding:0px;margin:0px;padding-right:0px;margin-right:0px;background-image:url('/Content/Images/back3.jpg') ">
        <div class="row" style="background-color:black;min-height:50px;padding-top:10px;">
            <div class="col-sm-3 text-center" style="padding-top:10px;">
                <span style="color:white;font-size:17px;font-weight:800;">Welcome To E-study Vidya</span>
            </div>
            <div class="col-sm-3 text-center">
                <span style="color:white;font-size:17px;font-weight:800;padding-top:10px;" class="glyphicon glyphicon-pencil"> Do more get more</span>
            </div>
            <div class="col-sm-6">
                <div class="row pull-right ">
                    <div class="col-sm-4 " style="padding:0px;margin-bottom:4px;">
                        <!--user photo-->
                        <div class="row pull-right" style="margin:0px;padding:0px;">
                            <div class="col-sm-4"> </div>
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4 right"><img id="ImgUpic" width="75px" height="50px" src="@ViewBag.StudentPic" style="border-radius:7px" /></div>
                        </div>


                    </div>
                    <div class="col-sm-8 text-right ">
                        <!--username-->
                        <span style="color:white;font-size:20px;font-weight:bold">Hello! @ViewBag.SName</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="background-color:white;min-height:70px;padding:0px;margin:0px;margin-right:0px;">
            <div class="col-sm-2" style="padding-left:10px;margin:unset;">
                <!--logo-->
                <a href="StudentSection"><img src="~/Content/Images/logo3.png" height="120px" width="150px" /></a>
            </div>

            <div class="col-sm-10 text-center" style="padding:0px;margin:0px;">

                <nav class="navbar navbar-expand-md  navbar-light  " style="padding-top:30px;">
                    <!-- Brand -->
                    <!-- <a class="navbar-brand" href="#">Menubar</a>-->
                    <!-- Toggler/collapsibe Button -->
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="collapsibleNavbar">
                        <ul class="navbar-nav" style="font-size:25px;">
                            <li class="nav-item" style="margin-left:35px">
                                <a href="StudentSection" class="nav-link" , style="font-weight:800;color:black;"><span class="glyphicon glyphicon-home"></span>Home</a>
                                <!-- @Html.ActionLink("Home", "StudentSection", "StudentZone", new { @class = "nav-link", style = "font-weight:800;color:black;" })-->
                            </li>
                            <li class="nav-item" style="margin-left:35px">
                                <a href="StudyMat" class="nav-link" , style="font-weight:800;color:black;"><span class="glyphicon glyphicon-download-alt"></span>Download</a>
                                <!-- @Html.ActionLink("Download", "StudyMat", "StudentZone", new { @class = "nav-link", style = "font-weight:800;color:black;" })-->
                            </li>
                            <li class="nav-item" style="margin-left:35px">
                                <a href="Upload" class="nav-link" , style="font-weight:800;color:black;"><span class="glyphicon glyphicon-upload"></span>Upload</a>
                                <!-- @Html.ActionLink("Upload", "Upload", "StudentZone", new { @class = "nav-link", style = "font-weight:800;color:black;" })-->
                            </li>
                            <li class="nav-item" style="margin-left:35px">
                                <a href="Feedback" class="nav-link" , style="font-weight:800;color:black;"><span class="glyphicon glyphicon-envelope"></span>Feedback</a>
                                <!-- @Html.ActionLink("Feedback", "Feedback", "StudentZone", new { @class = "nav-link", style = "font-weight:800;color:black;" })-->
                            </li>
                            <li class="nav-item" style="margin-left:35px">
                                <a href="Discussion" class="nav-link" , style="font-weight:800;color:black;"><span class="glyphicon glyphicon-question-sign"></span>Discussion Board</a>
                                <!-- @Html.ActionLink("Discussion Board", "Discussion", "StudentZone", new { @class = "nav-link", style = "font-weight:800;color:black;" })-->
                            </li>
                            <!-- Dropdown -->
                            <li class="nav-item dropdown" style="margin-left:35px">
                                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                    <span style="font-weight:800;color:black;"> <p class="glyphicon glyphicon-wrench"></p>Settings</span>
                                </a>
                                <div class="dropdown-menu">
                                    <a href="StdProfile" class="dropdown-item" , style="font-size:18px;font-weight:600;color:black; "><span class="glyphicon glyphicon-user"></span>My Profile</a>
                                    <!--@Html.ActionLink("My Profile", "StdProfile", "StudentZone", new { @class = "dropdown-item", style = "font-size:18px;font-weight:500;color:black; " })-->
                                    <a href="ChangePass" class="dropdown-item" , style="font-size:18px;font-weight:600;color:black; "><span class="glyphicon glyphicon-transfer"></span>Change Password</a>
                                    <!--@Html.ActionLink("Change Password", "ChangePass", "StudentZone", new { @class = "dropdown-item", style = "font-size:18px;font-weight:500;color:black;" })-->
                                    <a href="Logout" class="dropdown-item" , style="font-size:18px;font-weight:600;color:black; "><span class="glyphicon glyphicon-log-out"></span>Logout</a>
                                    <!--@Html.ActionLink("Logout", "Logout", "StudentZone", new { @class = "dropdown-item", style = "font-size:18px;font-weight:500;color:black;" })-->
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>

        </div>

        <div class="row" style="background-color:black;min-height:30px;color:white;font-size:20px;">
            <marquee onmouseover="stop()" onmouseout="start()">
                <span>Today Project Submition Date Please upload Quicly </span>
                <span>C Programing class today 4:30 pm </span>
                <span>Please Submit your Resume </span>
            </marquee>
        </div>

        <div class="row" style="min-height:480px;padding:0px;margin-right:0px;margin:0px;padding-right:0px;">
            @RenderBody()
        </div>

        <div class="row" style="background-color:black;min-height:50px;padding-top:10px">

            <div class="col-sm-6 text-center">
                <span style="color:white;font-size:17px;font-weight:800;">This Content is &copy; Copyright by E-study Vidya</span>
            </div>
            <div class="col-lg-6 text-center">
                <span style="color:white;font-size:18px;font-weight:800;">Developed by-<a href="/Home/Personal" style="color:white;"> Alok jaiswal</a></span>

            </div>
        </div>



    </div>
