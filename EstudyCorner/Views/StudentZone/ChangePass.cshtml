
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/StudentZoneLayout.cshtml";
}



<div class="container-fluid" style="padding:40px 0px 40px 0px;">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6" style="border:outset;border-bottom-right-radius:9px;border-top-right-radius:9px;background-color:rgba(255, 255, 255, 0.73)">
            <div class="row ">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    <p style="font-size:25px;text-align:center;font-weight:800;padding-top:20px;">Change Password</p>
                </div>
                <div class="col-sm-2"></div>
            </div>
            @using (Html.BeginForm("ChangePass", "StudentZone", FormMethod.Post))
            {
                <div class="row ">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        @Html.TextBox("CurrentPass", null, new { required = "required", @class = "form-control", placeholder = "Enter your current password", type = "password", style = "padding : 20px; margin: 10px;border: 3px outset;width:90%;border-radius:8px;font-size:18px;" })
                    </div>
                    <div class="col-sm-2"></div>
                </div>

                <div class="row ">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        @Html.TextBox("NewPass", null, new { required = "required", @class = "form-control", placeholder = " New Password", type = "password", style = "padding : 20px; margin: 10px;border: 3px outset;width:90%;border-radius:8px;font-size:18px;" })
                    </div>
                    <div class="col-sm-2"></div>
                </div>

                <div class="row ">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        @Html.TextBox("confPass", null, new { required = "required", @class = "form-control", placeholder = "Confirm Password", type = "password", style = "padding : 20px; margin: 10px;border: 3px outset;width:90%;border-radius:8px;font-size:18px;" })
                    </div>
                    <div class="col-sm-2"></div>
                </div>

                <div class="row " style="margin:10px;padding-left:10px;display:run-in;" >
                    <div class="col-sm-2"></div>
                    <div class="col-sm-4 text-center" >
                        <input type="submit" value="Change Password" class="btn btn-success btn-block" style="min-height:40px;width:80%;border-radius:6px;font-size:18px;">
                    </div>
                    <div class="col-sm-4 text-center" >
                        <input type="reset" value="Reset Password" class="btn btn-danger btn-block" style="min-height:40px;width:80%;border-radius:6px;font-size:18px;">
                    </div>
                    <div class="col-sm-2"></div>
                </div>

               

                <div class="row " style="margin:10px;">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8 text-center" style="margin-left:10px">
                        <span style="font-size:17px;color:white;font-weight:600;background-color:crimson;">@ViewBag.Result</span>
                    </div>
                    <div class="col-sm-2"> </div>
                </div>

            }
            
        </div>
        <div class="col-sm-3">
            
        </div>

    </div>


</div>