
@{
    ViewBag.Title = "Library";
    Layout = "~/Views/Shared/StudentZoneLayout.cshtml";
}


@using EstudyCorner.Models
@model IEnumerable<Library>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10 text-center h1" style="background-color:#88f41a;padding:20px;margin-top:15px;border-radius:8px;">
            Library
        </div>
        <div class="col-sm-1"></div>
    </div>
    <div class="row" style="padding:15px;">
        <div class="col-sm-12" style="color:white;font-size:18px;">
            <table border="1" style="width:100%;background-color:rgba(237, 196, 23, 0.78);border-radius:8px;" class="table table-hover table-responsive-sm table-bordered text-center">
                <tr style="background-color: black;color:white;font-weight:800;">
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>Book Name</th>
                    <th>Writer Name</th>

                    <th>Read</th>

                </tr>
                @foreach (Library lib in Model)
                {
                    <tr style="color:black;font-weight:500;">
                        <td>@lib.BookId</td>
                        <td>@lib.Title</td>
                        <td>@lib.BookName</td>
                        <td>@lib.BookWriter</td>
                        

                        <td><a href="~/Content/Libraries/@lib.BookFileName" title="Read"> Read & download </a></td>

                    </tr>
                }
            </table>


        </div>
    </div>
</div>


